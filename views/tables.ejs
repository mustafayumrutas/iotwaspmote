<div class="content-wrapper">
  <div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="index">Dashboard</a>
      </li>
      <li class="breadcrumb-item active">Cihazlar</li>
    </ol>
<div class="card mb-3">
  <div class="card-header">
    <i class="fa fa-table"></i> Cihazlar</div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
        <tr>
          <th>Waspmote ID</th>
          <th>CONTROL</th>
          <th>CHARTS</th>
          <th>Dummy</th>
          <th>Dummy</th>
          <th>Online</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
          <th>Waspmote ID</th>
          <th>CONTROL</th>
          <th>CHARTS</th>
          <th>Dummy</th>
          <th>Dummy</th>
          <th>Online</th>
        </tr>
        </tfoot>
        <tbody>
        <tr>
          <td> 1 </td>
          <td> <a href="/control/1" class="btn btn-success btn-xs">CONTROL</a></td>
          <td> <a href="/charts/1" class="btn btn-warning btn-xs">LOG</a>  </td>
          <td> 1 </td>
          <td> 1 </td>
          <td> 1 </td>

        </tr>
        <!-- baglantılar buraya -->
        <% if (locals.connections) { %>
        <% for(var connection of connections){ %>
        <tr data-connection-id="<%= connection.id %>">
          <td><%= connection.id %></td>
          <td><%= connection.name %></td>
          <td><%= connection.ip %></td>
          <td><%= connection.port %></td>
          <td><a href="/command/<%= connection.id %>" class="btn btn-success btn-xs">CONTROL</a><a href="/logs/<%= connection.id %>" class="btn btn-warning btn-xs">LOG</a></td>
        </tr>
        <%}}%>
        <tr>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
  </div>
</div>
